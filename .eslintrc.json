{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2017": true,
        "node": true,
        "amd": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "impliedStrict": true
        }
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    }
}