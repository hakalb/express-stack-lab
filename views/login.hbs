{{!-- Initial screen content --}}
<main id="login-box" class="bg-dark h-100">
    <div id="login-container" class="container d-flex flex-column h-100">
        <div class="jumbotron my-auto text-center">
            <h3 id="login-title" class="text-monospace"><i class="fas fa-user"></i>
                Log In
            </h3>
            {{!-- Log in form --}}
            <form class="mt-4">
                <div class="form-group">
                    <label class="sr-only" for="username">Username</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-user"></i></div>
                        </div>
                        <input type="text" class="form-control" id="username" placeholder="Username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="password">Password</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-key"></i></div>
                        </div>
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary mt-2">Log in</button>
            </form>
            <h6 class="display-6 mt-4"><a id="signUp" href="#">Sign up when you are a new
                    user <i class="fas fa-user-plus"></i></a></h6>
        </div>
    </div>
</main>